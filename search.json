---
layout: null
permalink: /search.json
---
{%- assign pages = site.pages | where_exp: "p", "p.url != '/search.json'" -%}
{%- assign docs = site.posts | concat: pages -%}
[
{%- for doc in docs -%}
  {
    "title": {{ (doc.title | default: doc.name) | jsonify }},
    "url": {{ doc.url | relative_url | jsonify }},
    "content": {{ doc.content | strip_html | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{%- endfor -%}
]
